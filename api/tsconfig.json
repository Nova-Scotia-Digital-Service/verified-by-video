{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./build",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "jsoncompilerOptions": {
    "strictNullChecks": true
  },
  "compileOnSave": false,
  "exclude": [
    "scripts/*",
    "build/*",
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts"
  ]
}
